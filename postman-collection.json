{
  "info": {
    "name": "Cognito Passwordless Backend API",
    "description": "API collection for Cognito passwordless authentication backend",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "session",
      "value": "",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        },
        "description": "Check if the API is running"
      },
      "response": [
        {
          "name": "Health Check Success",
          "originalRequest": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          },
          "status": "OK",
          "code": 200,
          "_postman_previewlanguage": "json",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "cookie": [],
          "body": "{\n    \"ok\": true\n}"
        }
      ]
    },
    {
      "name": "Start Authentication",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (responseCode.code === 200) {",
              "    const jsonData = pm.response.json();",
              "    if (jsonData.session) {",
              "        pm.collectionVariables.set('session', jsonData.session);",
              "    }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"phone\": \"+919876543210\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/start",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "start"]
        },
        "description": "Start the authentication process by providing a phone number. This will initiate a custom auth challenge in AWS Cognito."
      },
      "response": [
        {
          "name": "Start Auth Success",
          "originalRequest": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"phone\": \"+919876543210\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/start",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "start"]
            }
          },
          "status": "OK",
          "code": 200,
          "_postman_previewlanguage": "json",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "cookie": [],
          "body": "{\n    \"challenge\": \"CUSTOM_CHALLENGE\",\n    \"session\": \"AYABeA...\"\n}"
        },
        {
          "name": "Start Auth - Missing Phone",
          "originalRequest": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/start",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "start"]
            }
          },
          "status": "Bad Request",
          "code": 400,
          "_postman_previewlanguage": "json",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "cookie": [],
          "body": "{\n    \"error\": \"phone required\"\n}"
        }
      ]
    },
    {
      "name": "Respond to Authentication Challenge",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (responseCode.code === 200) {",
              "    const jsonData = pm.response.json();",
              "    if (jsonData.accessToken) {",
              "        pm.collectionVariables.set('accessToken', jsonData.accessToken);",
              "    }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"phone\": \"+919876543210\",\n    \"otp\": \"123456\",\n    \"session\": \"{{session}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/respond",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "respond"]
        },
        "description": "Respond to the authentication challenge with the OTP received via SMS. Use the session from the start authentication response."
      },
      "response": [
        {
          "name": "Auth Response Success",
          "originalRequest": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"phone\": \"+919876543210\",\n    \"otp\": \"123456\",\n    \"session\": \"AYABeA...\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/respond",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "respond"]
            }
          },
          "status": "OK",
          "code": 200,
          "_postman_previewlanguage": "json",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "cookie": [],
          "body": "{\n    \"idToken\": \"eyJraWQiOiI...\",\n    \"accessToken\": \"eyJraWQiOiI...\",\n    \"refreshToken\": \"eyJjdHkiOiI...\",\n    \"expiresIn\": 3600\n}"
        },
        {
          "name": "Auth Response - Missing Fields",
          "originalRequest": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"phone\": \"+919876543210\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/respond",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "respond"]
            }
          },
          "status": "Bad Request",
          "code": 400,
          "_postman_previewlanguage": "json",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "cookie": [],
          "body": "{\n    \"error\": \"phone, otp and session required\"\n}"
        }
      ]
    },
    {
      "name": "Protected Route Example",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}",
            "description": "Add the JWT token received from authentication"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/protected-endpoint",
          "host": ["{{baseUrl}}"],
          "path": ["protected-endpoint"]
        },
        "description": "Example of how to use the JWT token for protected routes. Replace with actual protected endpoints in your API."
      },
      "response": [
        {
          "name": "Unauthorized",
          "originalRequest": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/protected-endpoint",
              "host": ["{{baseUrl}}"],
              "path": ["protected-endpoint"]
            }
          },
          "status": "Unauthorized",
          "code": 401,
          "_postman_previewlanguage": "json",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "cookie": [],
          "body": "{\n    \"error\": \"missing authorization header\"\n}"
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [""]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [""]
      }
    }
  ]
}
